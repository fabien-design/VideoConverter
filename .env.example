# Video Converter Configuration
# Copy this file to .env and customize the paths

# ============================================
# Directory Paths (absolute paths recommended)
# ============================================

# Raw videos directory (read-only in container)
RAW_DIR=/mnt/videos/raw

# Public/output directory (read-write in container)
PUBLIC_DIR=/mnt/videos/public


# ============================================
# Cron Schedule
# ============================================

# Cron schedule for automatic sync (default: every hour)
# Format: minute hour day month weekday
# Examples:
#   */30 * * * *  = Every 30 minutes
#   0 */6 * * *   = Every 6 hours
#   0 2 * * *     = Daily at 2 AM
#   0 */2 * * *   = Every 2 hours
CRON_SCHEDULE=0 3 1 * *


# ============================================
# Runtime Options
# ============================================

# Run sync immediately when container starts (true/false)
RUN_ON_START=true


# ============================================
# Resource Limits
# ============================================

# CPU limits (adjust based on your VPS)
CPU_LIMIT=4.0
CPU_RESERVATION=1.0

# Memory limits
MEMORY_LIMIT=2G
MEMORY_RESERVATION=512M
